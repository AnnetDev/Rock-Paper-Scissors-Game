{
  "name": "rock-paper-scissors-game",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "npx npm-run-all --parallel watch serve",
    "watch": "sass --watch src/styles/styles.scss src/styles/styles.css",
    "serve": "live-server --port=8080 --open=./index.html",
    "build": "mkdir -p dist && sass src/styles/styles.scss dist/styles.css --style=compressed && cp index.html dist/ && cp src/script.js dist/",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "sass": "^1.93.2",
    "gh-pages": "^6.1.1",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5"
  }
}
